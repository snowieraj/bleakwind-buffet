<UserControl x:Class="PointOfSale.OrderTicket"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid Background="White" MaxHeight="800" >
        <DockPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Viewbox VerticalAlignment="Top">
                    <TextBlock Name="orderNumber" Foreground="Orange" FontWeight="Bold"/>
                </Viewbox>
                <Viewbox Grid.Row="1">
                    <ListView x:Name="itemsOrdered" Foreground="Black" BorderThickness="0" FontSize="15"/>
                </Viewbox>
                <Viewbox Grid.Row="2" MaxWidth="120">
                    <TextBlock Name="total" Foreground="Orange" FontWeight="Bold"/>
                </Viewbox>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
